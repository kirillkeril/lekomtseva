<div class="quiz-container">
    <div class="start-screen">
        <span id="last-result">Предыдущий результат: 0</span>
        <button class="quiz-button" id="start-button">Старт</button>
    </div>
    <div id="display-container">
        <div class="quiz-header">
            <div class="number-of-count">
                <span class="number-of-question">1 из 3 вопросов</span>
            </div>
            <div class="timer-div">
                <span class="time-left">10 сек</span>
            </div>
        </div>
        <div id="container">
            <!-- questions and options will be displayed here -->
        </div>
        <button class="quiz-button" id="next-button">Далее</button>
    </div>
    <div class="score-container hide">
        <div id="user-score">Demo Score</div>
        <button class="quiz-button" id="restart">Начать с начала</button>
    </div>

    <script src="js/quiz.js"></script>
</div>
